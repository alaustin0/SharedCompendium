{"_id":"aeVsAVcR73B2xAPw","data":{"ability":null,"actionType":"util","activation":{"condition":"","cost":1,"type":"action"},"attackBonus":0,"chatFlavor":"","components":{"concentration":false,"material":true,"ritual":false,"somatic":true,"value":"either a pinch of dried carrot or an agate","vocal":true},"consume":{"amount":null,"target":null,"type":""},"critical":null,"damage":{"parts":[],"versatile":""},"description":{"chat":"<p>You touch a willing creature to grant it the ability to see in the dark. For the duration, that creature has darkvision out to a range of 60 feet.</p>","unidentified":"","value":"<p>You touch a willing creature to grant it the ability to see in the dark. For the duration, that creature has darkvision out to a range of 60 feet.</p>"},"duration":{"units":"hour","value":8},"formula":"","level":2,"materials":{"consumed":false,"cost":0,"supply":0,"value":"either a pinch of dried carrot or an agate"},"preparation":{"mode":"prepared","prepared":false},"range":{"long":null,"units":"touch","value":null},"save":{"ability":"","dc":null,"scaling":"spell"},"scaling":{"formula":"","mode":"none"},"school":"trs","source":"Basic Rules, Player's Handbook pg 230","target":{"type":null,"units":"touch","value":null,"width":null},"uses":{"max":0,"per":null,"value":0}},"effects":[],"flags":{"betterRolls5e":{"quickCharges":{"altValue":{"resource":true,"use":true},"value":{"resource":true,"use":true}},"quickVersatile":{"altValue":true}},"core":{"sourceId":"Compendium.world.ddb-import-haven-spells.l4gMCDliosJCJyiH"},"ddbimporter":{"definitionId":2059,"dndbeyond":{"castAtLevel":null,"level":null,"lookup":"generic","lookupName":"generic"},"entityTypeId":435869154,"id":136497,"sources":[{"pageNumber":null,"sourceId":1,"sourceType":2},{"pageNumber":230,"sourceId":2,"sourceType":1}],"tags":["Buff"]}},"folder":null,"img":"icons/magic/perception/eye-ringed-glow-angry-small-red.webp","name":"Darkvision","permission":{"3AYHMWdZOlxF9nZC":3,"default":0},"sort":0,"type":"spell"